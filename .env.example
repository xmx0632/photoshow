# Gemini API密钥
GEMINI_API_KEY=your_gemini_api_key_here

# 环境变量
NODE_ENV=development

# 管理员密码
ADMIN_PASSWORD=your_admin_password_here

# HTTP代理设置
HTTP_PROXY=http://127.0.0.1:7890
HTTPS_PROXY=http://127.0.0.1:7890

# 图片生成模型选择 (gemini 或 imagen)
IMAGE_MODEL=gemini

# Cloudflare R2 存储配置
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_ACCESS_KEY_ID=your_access_key_id_here
CLOUDFLARE_SECRET_ACCESS_KEY=your_secret_access_key_here
CLOUDFLARE_BUCKET_NAME=photoshow-images
CLOUDFLARE_BUCKET_REGION=auto

# 存储配置
# 存储限额（MB），默认 5GB
STORAGE_QUOTA_MB=5120
# 存储警告阈值（百分比），默认 80%
WARNING_THRESHOLD=0.8

# 存储缓存配置
# 服务器端缓存过期时间（秒），默认 5 分钟
STORAGE_CACHE_TTL=300
# 客户端短期缓存时间（秒），默认 60 秒
CLIENT_CACHE_SHORT=60
# 客户端长期缓存时间（秒），默认 5 分钟
CLIENT_CACHE_LONG=300

# 图片生成限制
# 每日图片生成数量限制，默认 50 张
DAILY_GENERATION_LIMIT=50

# 缓存配置
# 缓存类型：'file'（文件系统）或 'redis'（Redis缓存）
CACHE_TYPE=file

# Redis 连接配置（当 CACHE_TYPE=redis 时使用）
REDIS_URL=rediss://default:password@your-redis-instance.upstash.io:6379

# Supabase 数据库配置
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
STORAGE_QUOTA_MB=5120
WARNING_THRESHOLD=0.8
